@{
    ViewData["Title"] = "Home Page";
}

@model LoginUsuarioModel

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Usuário</label>
        @Html.TextBoxFor(a => a.Usuario, new {@class="form-control", required = true, minlenght= 3})
    </div>
        <div class="form-group">
        <label>Senha</label>
        @Html.PasswordFor(a => a.Senha, new {@class="form-control", required = true, minlenght= 6})
    </div>
    <button type="submit" class="btn btn-info">Entrar</button>
}
