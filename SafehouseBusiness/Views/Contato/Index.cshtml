@using SafeHouseBusiness.Domain.Entidades

@model IEnumerable<Contato>

@*View Data serve para mudar o nome da aba*@
@{
    ViewData["Title"] = "Contatos Cadastrados";
}

<h1>Contatos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Celular</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contato item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Telefone</td>
                <td>@Html.ActionLink("Detalhes", "Details", "Contato", new {id = item.Id})</td>
            </tr>
        }
    </tbody>
</table>
